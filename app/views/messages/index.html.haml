=render partial: 'reports/header'
=render partial: 'reports/menu'

.Wrapper
  =render partial: 'groups/sideGroup'
  .Main
    .MainHeader
      .MainHeader__group
        .MainHeader__groupName
          = @group.name
        %ul.MainHeader__memberList
          Member：
          %li.MainHeader__member
            - @group.users.each do |user|
              = user.name
      %li.MainHeader__editButton
        = link_to '編集', edit_group_path(@group.id)

    .MessageField
      = render @messages
    
    .Footer
      = form_with model: [@group, @message], html: {class: "Form"}, local: true do |f|
        .Form__contents
          = f.text_field :content, class: 'Form__inputContent', placeholder: 'type a message'
          = f.label :image, class: 'Form__inputImage' do
            = icon('far', 'image', class: 'Form__icon')
            = f.file_field :image, class: 'Hidden'
        = f.submit 'Send', class: 'Form__submit'

